    End If
End Sub


Private Sub cmdBtnEqual_Click()

On Error GoTo ErrOcccered
    'Dim txtRes As Long
    
    If TextBox <> "" And calVal <> "" Then
        FNum = val(TextDisplay): SNum = val(TextBox)
        Select Case calVal
            Case "Sine"
                TextBox = Sin(FNum)
            Case "Cosine"
                TextBox = Cos(FNum)
            Case "Tangent"
                TextBox = Tan(FNum)
            Case "ArcSine"
                TextBox = 1 / (Sin(FNum))
            Case "ArcCosine"
                TextBox = 1 / (Cos(FNum))
            Case "ArcTangent"
                TextBox = 1 / Tan((FNum))
            Case "Degree"
                TextBox = (FNum * 180) / 3.141592653897
            Case "Radian"
                TextBox = (FNum * (3.141592653897 / 180))
            Case Else
                
        End Select
        TextDisplay = Empty
    End If
ErrOcccered:

End Sub

